<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:padding="24dp">

    <!-- Handle Bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#E0E0E0"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Transaksi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/teal_dark"
        android:layout_marginBottom="20dp"/>

    <!-- Bagian Icon & Nominal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <!-- ID: cvDetailInisial -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvDetailInisial"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="#E0F2F1"
            app:cardElevation="0dp"
            android:layout_marginBottom="16dp">

            <!-- ID: tvDetailInisial -->
            <TextView
                android:id="@+id/tvDetailInisial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="M"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/teal_primary"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- ID: tvDetailAmount -->
        <TextView
            android:id="@+id/tvDetailAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 15.000"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/expense_red"/>

        <!-- ID: tvDetailType -->
        <TextView
            android:id="@+id/tvDetailType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengeluaran"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Informasi Detail -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_rounded_edittext"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <!-- Deskripsi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Keterangan"
                android:textColor="#757575"/>

            <!-- ID: tvDetailDescription -->
            <TextView
                android:id="@+id/tvDetailDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:textStyle="bold"
                android:text="Beli Makan Siang"
                android:textColor="#212121"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginVertical="12dp"/>

        <!-- Tanggal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tanggal"
                android:textColor="#757575"/>

            <!-- ID: tvDetailDate -->
            <TextView
                android:id="@+id/tvDetailDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:textStyle="bold"
                android:text="03 Des 2025"
                android:textColor="#212121"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Tombol Aksi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- ID: btnDetailEdit -->
        <Button
            android:id="@+id/btnDetailEdit"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit"
            android:layout_marginEnd="8dp"
            android:textColor="@color/teal_dark"
            app:strokeColor="@color/teal_dark"/>

        <!-- ID: btnDetailDelete -->
        <Button
            android:id="@+id/btnDetailDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hapus"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/expense_red"/>
    </LinearLayout>

</LinearLayout>