<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Bagian ini yang ditambahkan ID -->
    <TextView
        android:id="@+id/tvDialogTitle"
        android:text="Tambah Transaksi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etDeskripsi"
        android:hint="Deskripsi (ex: Beli Bakso)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etJumlah"
        android:hint="Jumlah (ex: 15000)"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etKategori"
        android:hint="Inisial Kategori (ex: M)"
        android:maxLength="1"
        android:textAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:id="@+id/rgTipe"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
        <RadioButton
            android:id="@+id/rbPengeluaran"
            android:text="Pengeluaran"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"/>
        <RadioButton
            android:id="@+id/rbPemasukan"
            android:text="Pemasukan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnSimpan"
        android:text="SIMPAN"
        android:backgroundTint="@color/teal_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>